<script>
// Changelog - Gestione versione con localStorage
(function() {
    const CURRENT_VERSION = "1.0.3";  // ï¿½da Aggiornare ad ogni release
    
    document.addEventListener('DOMContentLoaded', function() {
        const seenVersion = localStorage.getItem('tecnodeposit_version');
        
        if (seenVersion !== CURRENT_VERSION) {
            // Mostra il modal changelog
            const modal = document.getElementById('changelogModal');
            if (modal) {
                modal.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            }
        }
    });
    
    // Esponi la funzione globalmente
    window.chiudiChangelog = function() {
        localStorage.setItem('tecnodeposit_version', CURRENT_VERSION);
        const modal = document.getElementById('changelogModal');
        if (modal) {
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
    };
})();
</script>
